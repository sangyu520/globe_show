{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",  // 让 TypeScript 按照 Node.js 的模块解析规则解析模块
    "esModuleInterop": true,  // 允许默认导入模块
    "resolveJsonModule": true,  // 使 TypeScript 支持导入 .json 文件
    "module": "ESNext",  // 使用 ESNext 模块化标准
    "target": "ESNext",  // 使用 ESNext 语法
    "types": ["node"]  // 引入 Node.js 的类型定义
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}

